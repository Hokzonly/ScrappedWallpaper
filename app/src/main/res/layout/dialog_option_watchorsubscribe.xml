<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/applybg"
    android:backgroundTint="@color/colorCard"
    android:layout_gravity="bottom"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:adjustViewBounds="true"
            android:padding="15dp"
            app:tint="@color/colorWhite"
            android:src="@drawable/locked"
            android:layout_width="match_parent"
            android:layout_height="130dp"/>
        <TextView
            android:gravity="center"
            android:text="Premium Wallpaper"
            android:fontFamily="@font/black"
            android:textSize="25sp"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/colorWhite"
            android:alpha=".8"
            android:gravity="center"
            android:layout_margin="15dp"
            android:text="please watch an ad  to unlock this wallpaper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/WatchAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/sub_on"
                android:fontFamily="@font/black"
                android:text="Watch Ad"
                android:textColor="@color/colorWhite"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>