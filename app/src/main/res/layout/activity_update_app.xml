<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".ui.UpdateAppActivity">

    <ImageView
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:alpha=".4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:elevation="5dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/update"
            android:adjustViewBounds="true"
            app:tint="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <TextView
            android:text="Please update"
            android:fontFamily="@font/black"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/medium"
            android:textColor="@color/colorWhite"
            android:alpha=".8"
            android:gravity="center"
            android:text="in order to continue using the app, we encourage you to update the app to the latest version. this update will improve the app performance and fix some bugs."
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/UpdateNow"
            android:layout_margin="30dp"
            android:text="Update app"
            android:background="@drawable/sub_on"
            android:fontFamily="@font/bold"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>


</RelativeLayout>